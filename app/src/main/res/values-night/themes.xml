<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Skintoneme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppinsregular</item>
        <item name="colorPrimary">@color/pink</item>
    </style>

    <style name="text_intro">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="edittext_costum">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SpinnerTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>